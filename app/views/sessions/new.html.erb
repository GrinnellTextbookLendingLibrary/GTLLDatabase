<div class="infoBlock">
<h1>User Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.text_field :email, :placeholder => "Email" %>
  </div>
  <div class="field">
    <%= f.password_field :password, :placeholder => "password" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", :class => "button" %>
  </div>
<% end %>
</div>
