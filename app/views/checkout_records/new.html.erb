<h1>Checkout Book</h1>
<div class="infoBlock">
  <% @book = Book.find(params[:param]) %>
  <%= render "shared/book_info" %>
  <%= form_for(@checkout_record) do |f| %>
  <%= f.label :user_id, "Select Borrower:" %>
  <%= f.collection_select(:user_id, User.all, :id, :name) %>
  <%= f.hidden_field :book_id, :value => @book.id %>
  <div class="actions">
    <%= f.submit "Checkout" %>
  </div>
  <% end %>
</div>

